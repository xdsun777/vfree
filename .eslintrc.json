{
    "root": true, // 指定当前配置为根配置，ESLint 检查时不会再向上查找配置文件
    "env": {
        "browser": true, // 代码运行在浏览器环境下，内置全局变量如 window、document 可用
        "es6": true, // 启用 ES6 语法特性
        "node": true // 代码运行在 Node.js 环境下，内置全局变量如 require、module 可用
    },
    "extends": [
        "eslint:recommended", // 使用 ESLint 官方推荐的规则
        "plugin:vue/vue3-recommended", // 使用 Vue 3 推荐的规则（适用于 Vue 项目）
        "plugin:@typescript-eslint/recommended" // 使用 TypeScript 推荐的规则
    ],
    "parser": "vue-eslint-parser", // 指定解析器，支持 .vue 文件的解析
    "parserOptions": {
        "parser": "@typescript-eslint/parser", // 指定 TypeScript 解析器，支持 ts/tsx
        "ecmaVersion": 2021, // 支持的 ECMAScript 版本
        "sourceType": "module" // 代码采用 ES 模块
    },
    "plugins": [
        "vue", // 启用 vue 插件
        "@typescript-eslint" // 启用 TypeScript 插件
    ],
    "rules": {
        // 这里可以自定义规则，覆盖 extends 中的默认规则
        // 例如：
        // "semi": ["error", "always"], // 强制使用分号
        // "quotes": ["error", "single"] // 强制使用单引号
    }
}